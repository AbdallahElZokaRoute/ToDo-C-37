<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedforcalender"
    android:layout_margin="8dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/calenderDayOfWeek"
        android:textColor="@color/colorText"
        tools:text="Mon" />

    <TextView
        android:id="@+id/calenderDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/calendarDayText"
        app:layout_constraintStart_toStartOf="@id/calendarDayText"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorText"
        tools:text="Mon" />
</androidx.constraintlayout.widget.ConstraintLayout>